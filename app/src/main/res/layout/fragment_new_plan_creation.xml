<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.travelguide.activities.NewTavelPlanActivity">
    <TextView
        android:id="@+id/tv_NewPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:text="@string/new_trip"
        android:textSize="40sp"
        android:textStyle="normal" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/tv_NewPlan"
        android:background="@color/colorBlack" />
    <EditText
        android:id="@+id/tv_PlanName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/view"
        android:layout_below="@+id/view"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/plan_name"
        android:drawablePadding="10dp"
        android:hint="@string/hint_plan_name"
        android:paddingLeft="10dp"
        android:singleLine="true" />
    <EditText
        android:id="@+id/et_PlaceName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/view"
        android:layout_below="@+id/tv_PlanName"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/location_icon"
        android:drawablePadding="11dp"
        android:hint="@string/hint_destination"
        android:paddingLeft="10dp"
        android:singleLine="true" />
    <EditText
        android:id="@+id/tv_StartDate"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_PlaceName"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/calender_icon"
        android:drawablePadding="11dp"
        android:hint="@string/label_Start_Date"
        android:paddingLeft="10dp"
        android:singleLine="true" />
    <EditText
        android:id="@+id/tv_EndDate"
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_StartDate"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/calender_icon"
        android:drawablePadding="11dp"
        android:hint="@string/label_End_Date"
        android:paddingLeft="10dp"
        android:singleLine="true" />
    <Button
        android:id="@+id/btn_Male"
        style="@style/Button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_StartDate"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_male"
        android:paddingRight="10dp" />
    <Button
        android:id="@+id/btn_Female"
        style="@style/Button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_NewPlan"
        android:layout_alignStart="@+id/tv_NewPlan"
        android:layout_alignTop="@+id/btn_Male"
        android:drawableLeft="@drawable/ic_female"
        android:paddingRight="10dp" />
    <Button
        android:id="@+id/btn_Couple"
        style="@style/Button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_CreatePlan"
        android:layout_alignEnd="@+id/tv_NewPlan"
        android:layout_alignRight="@+id/tv_NewPlan"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_couple"
        android:paddingRight="10dp" />
    <Button
        android:id="@+id/btn_Family"
        style="@style/Button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/et_PlaceName"
        android:layout_alignRight="@+id/et_PlaceName"
        android:layout_alignTop="@+id/btn_Couple"
        android:layout_marginRight="25dp"
        android:drawableLeft="@drawable/ic_family"
        android:paddingRight="10dp" />
    <Button
        android:id="@+id/btn_CreatePlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_Couple"
        android:layout_alignLeft="@+id/btn_Female"
        android:layout_alignRight="@+id/btn_Couple"
        android:layout_alignStart="@+id/btn_Female"
        android:layout_below="@+id/btn_Female"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text_style"
        android:onClick="createPlan"
        android:text="@string/label_create_plan" />
</RelativeLayout>
