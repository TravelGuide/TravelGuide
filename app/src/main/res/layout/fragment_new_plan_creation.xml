<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.travelguide.activities.NewTavelPlanActivity">

    <TextView
        android:id="@+id/tv_NewPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/new_trip"
        android:textSize="40sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/tv_PlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_NewPlan"
        android:hint="@string/hint_plan_name"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:id="@+id/actv_PlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_PlanName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_PlanName"
        android:layout_below="@+id/tv_PlanName"
        android:layout_marginTop="44dp"
        android:hint="@string/hint_destination"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_StartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_EndDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_EndDate"
        android:hint="@string/label_Start_Date"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_EndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="11dp"
        android:hint="@string/label_End_Date"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_NewPlan"
        android:layout_toEndOf="@+id/tv_NewPlan" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_StartDate"
        android:layout_marginTop="10dp"
        android:text="Type" />

    <RadioGroup
        android:id="@+id/rgGroupType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female" />

        <RadioButton
            android:id="@+id/rbCouple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/couple" />

        <RadioButton
            android:id="@+id/rbFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family" />
    </RadioGroup>
</RelativeLayout>
